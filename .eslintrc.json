{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["prettier", "@typescript-eslint"],
  "parser": "@typescript-eslint/parser", // TypeScript 파서 사용
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "semi": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "useTabs": false,
        "arrowParens": "avoid",
        "endOfLine": "auto"
      }
    ],
    "@typescript-eslint/consistent-type-definitions": ["error", "type"], // 타입 정의 일관성
    "@typescript-eslint/no-explicit-any": "warn", // any 타입 사용 경고
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "react/react-in-jsx-scope": "off" // Next.js에서 React 자동 임포트
  }
}
