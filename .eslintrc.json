{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["prettier", "@typescript-eslint"],
  "parser": "@typescript-eslint/parser", // TypeScript 파서 사용
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "semi": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "useTabs": false,
        "arrowParens": "avoid",
        "endOfLine": "auto"
      }
    ],
    "@typescript-eslint/explicit-function-return-type": "off", // 함수 반환 타입 명시 비활성화
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_", // 언더스코어로 시작하는 인자는 사용하지 않음
        "caughtErrorsIgnorePattern": "^_" // 언더스코어로 시작하는 잡히지 않은 오류는 무시
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn", // 'any' 타입 사용 경고
    "@typescript-eslint/explicit-module-boundary-types": "off", // 모듈 경계 타입 명시 비활성화
    "react/react-in-jsx-scope": "off" // Next.js는 자동으로 React를 임포트함
  }
}
