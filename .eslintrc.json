{
  "extends": ["next/core-web-vitals", "next/typescript", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "semi": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "useTabs": false,
        "arrowParens": "avoid",
        "endOfLine": "auto"
      }
    ]
    // "react/react-in-jsx-scope": "off", // Next.js는 React 자동 임포트를 지원
    // "@typescript-eslint/no-unused-vars": "error"
  }
}
